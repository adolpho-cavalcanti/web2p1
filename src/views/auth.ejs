<form action="/auth" method="POST">
    <div class="form-group">
        <label for="email">Login</label>
        <input type="text" name="email" id="email" class="form-control <%= (typeof errors != 'undefined' && typeof errors.email != 'undefined') ? "is-invalid" : "is-valid" %>">
        <% if(typeof errors != 'undefined' && typeof errors.email != 'undefined'){ %>
            <div class="invalid-feedback"><%= email %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="password">Senha</label>
        <input type="password" name="password" id="password" class="form-control <%= (typeof errors != 'undefined' && typeof errors.password != 'undefined') ? "is-invalid" : "is-valid" %>">
        <% if(typeof errors != 'undefined' && typeof errors.password != 'undefined'){ %>
            <div class="invalid-feedback"><%= password %></div>
        <% } %>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Entrar</button>
    </div>
</form>